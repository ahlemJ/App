<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/code1"
            android:text="Entrez votre code : "
            android:layout_width="180dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="73dp" />
        <EditText
            android:id="@+id/code"
            android:hint="Votre code"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="73dp"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/valider"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_annul"
        android:text="Valider"
        android:textColor="@color/colorPrimary"
       android:layout_below="@+id/linear"

        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/infoResr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/annuler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/valider"
        android:layout_marginBottom="154dp"
        android:text="Confimer l'annulation"
        android:layout_alignLeft="@+id/valider" />
</RelativeLayout>